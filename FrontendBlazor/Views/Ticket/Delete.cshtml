                                @Html.DisplayNameFor(model => model.Mail) :
                            </label>
                            <p class="text-muted">
                                @Html.DisplayFor(model => model.Mail)
                            </p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 fw-bolder mb-0 text-uppercase">
                                @Html.DisplayNameFor(model => model.QUERY) :
                            </label>
                            <p class="text-muted">
                                @Html.DisplayFor(model => model.QUERY)
                            </p>
                        </div>
                        <div>
                            <form asp-action="Delete">
                                @Html.HiddenFor(Model => Model.IdTicket)
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Tickets">Regresar a la lista</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

