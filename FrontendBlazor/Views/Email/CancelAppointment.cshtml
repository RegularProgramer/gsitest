@model AppointmentViewModel
@{
    ViewBag.Title = "Cancel Appointment";
    Layout = "~/Views/Shared/FrontPageLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Cita Cancelada</title>
    <style>
        .content {
            margin-top: 25px;
            min-height: 66vh;
            display: flex;
            flex-direction: column;
            align-items: center; 
            text-align: center; 
        }

        .btn {
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
