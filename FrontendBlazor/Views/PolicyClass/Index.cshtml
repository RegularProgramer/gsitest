@model IEnumerable<FrontendBlazor.Models.PolicyClassViewModel>
@{
    ViewBag.Title = "Lista de seguros";
    Layout = "~/Views/Shared/FrontPageLayout.cshtml";
}




        <div id="content" class="site-content">
            <div class="page-header">
                <div class="container">
                    <div class="breadc-box no-line">
                        <div class="row">
                            <div class="col-md-6">
                                <h1 class="page-title">Icon Boxes</h1>
                            </div>
                            <div class="col-md-6 mobile-left text-right">
                                <ul id="breadcrumbs" class="breadcrumbs none-style">
                                    <li><a href="index.html">Home</a></li>
                                    <li class="active">Seguros</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <section class="wpb_row row-fluid row-o-equal-height row-flex section-padd">
                <div class="container">
                    <div class="row">
                @foreach (var item in Model)
                {
                        <div class="wpb_column column_container col-sm-6 col-md-4">
                            <div class="column-inner">
                                <div class="wpb_wrapper">
                                    <div class="service-box icon-box ionic hover-box">
                                        <i class="ion-md-umbrella ion-logo-umbrella"></i>
                                        <div class="content-box">
                                    <h4> @Html.DisplayFor(modelItem => item.PolicyName)</h4>
                                        <p>@Html.DisplayFor(modelItem => item.PolicyDescription)</p>
                                        <a class="link-box pagelink"> @Html.ActionLink("Conocer mas", "Details", new {  id=item.PolicyclassId }) </a>
                                        </div>
                                    </div>

                                    <div class="empty_space_30"></div>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </section>
        </div>


       