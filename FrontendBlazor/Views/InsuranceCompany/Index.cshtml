@model IEnumerable<FrontendBlazor.Models.InsuranceCompanyViewModel>

@{
    Layout = "~/Views/Shared/MainPageLayout.cshtml";
    ViewData["Title"] = "Lista de aseguradoras";
}


<div class="page-content">
<h1>Lista de aseguradoras</h1>

<p>
    <a asp-action="Create">Insertar nueva aseguradora</a>
</p>



<div class="row row-cols-1 row-cols-md-2 g-4">

            @foreach (var item in Model) {
        <div class="col">
            <div class="card">
                    <div class="card-header bg-info" >   </div>
                <div class="card-body">
                        <h5 class="card-title" id="companyName">  @Html.DisplayFor(modelItem => item.InsuranceCompanyName)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.InsuranceCompanyDescription)</p>
                        <div class="mt-3 gap-2">
                            @Html.ActionLink("Detalles", "Details", new {  id=item.InsuranceCompanyId } , new { @class = "btn btn-info", @style= "text-decoration:none" })
                            @Html.ActionLink("Desactivar", "Delete", new {  id=item.InsuranceCompanyId } , new { @class = "btn btn-primary", @style= "text-decoration:none" })
                            
                        </div>
                </div>
            </div>
        </div>
            }
   
</div>
</div>





